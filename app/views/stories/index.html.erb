<h1>Welcome to Rewsly</h1>

<% if user_signed_in? %>
  <h3><%= link_to "My Stories", user_path(current_user) %></h3>
  <h3><%= link_to "Add New Story", new_story_path %></h3>
<% end %>

<%= form_tag '/', method: :get do %>
  <%= search_field_tag :q, params[:q] %>
  <%= submit_tag "Search" %>
<% end %>

<br/>

<div id="stories">
  <ul>
    <%= render @stories %>
  </ul>
</div>
